# Eden Music Scene Environment Variables
# Copy this file to .env and configure as needed

# =============================================================================
# Emotion Service Configuration
# =============================================================================

# Database URL for the emotion tag service
# Default: SQLite database in the current directory
# Examples:
#   SQLite:      sqlite:///emotion_tags.db
#   PostgreSQL:  postgresql://user:password@localhost:5432/eden_music
#   MySQL:       mysql+pymysql://user:password@localhost:3306/eden_music
EMOTION_DB_URL=sqlite:///emotion_tags.db

# Base URL for the emotion service API (used by clients)
# Default: http://127.0.0.1:8000
EMOTION_SERVICE_URL=http://127.0.0.1:8000

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug mode (set to "true" for development)
# DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO
